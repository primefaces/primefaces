<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
	<tag>messages</tag>
	<tagClass>org.primefaces.component.messages.MessagesTag</tagClass>
	<componentClass>org.primefaces.component.messages.Messages</componentClass>
	<componentType>org.primefaces.component.Messages</componentType>
	<componentFamily>org.primefaces.component</componentFamily>
	<rendererType>org.primefaces.component.MessagesRenderer</rendererType>
	<rendererClass>org.primefaces.component.messages.MessagesRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>showSummary</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
			<description>Specifies if the summary of the FacesMessage should be displayed.</description>
		</attribute>
		<attribute>
			<name>showDetail</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Specifies if the detail of the FacesMessage should be displayed.</description>
		</attribute>
		<attribute>
			<name>globalOnly</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>When true, only facesmessages with no clientIds are displayed.</description>
		</attribute>
		<attribute>
			<name>redisplay</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
			<description>Defines if already rendered messages should be rendered.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>messages/messages.css</name>
		</resource>
	</resources>
</component>