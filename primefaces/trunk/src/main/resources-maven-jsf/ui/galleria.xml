		<interface>
			<name>org.primefaces.component.api.Widget</name>
		</interface>
	</interfaces>
	<attributes>
		&standard_uicomponent_attributes;
		&widget_var_attribute;
         <attribute>
            <name>style</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
		<attribute>
			<name>effect</name>
			<required>false</required>
			<type>java.lang.String</type>
            <defaultValue>fade</defaultValue>
		</attribute>
        <attribute>
			<name>effectSpeed</name>
			<required>false</required>
			<type>java.lang.Integer</type>
            <defaultValue>700</defaultValue>
		</attribute>
	</attributes>
	<resources>
        <resource>
			<name>galleria/galleria.css</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
		<resource>
			<name>core/core.js</name>
		</resource>
        <resource>
			<name>galleria/galleria.js</name>
		</resource>
        <resource>
			<name>galleria/galleria.classic.js</name>
		</resource>
