<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY output_component_attributes			SYSTEM "../entities/output_component_attributes.xml">
<!ENTITY input_component_attributes				SYSTEM "../entities/input_component_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>imageSwitch</tag>
	<tagClass>org.primefaces.component.imageswitch.ImageSwitchTag</tagClass>
	<componentClass>org.primefaces.component.imageswitch.ImageSwitch</componentClass>
	<componentType>org.primefaces.component.ImageSwitch</componentType>
	<componentFamily>org.primefaces.component</componentFamily>
	<rendererType>org.primefaces.component.ImageSwitchRenderer</rendererType>
	<rendererClass>org.primefaces.component.imageswitch.ImageSwitchRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		&widget_var_attribute;
		<attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>
				 Style of the container element.
			</description>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>
				 Style class of container element.
			</description>
		</attribute>
		<attribute>
			<name>effect</name>
			<required>true</required>
			<type>java.lang.String</type>
			<description>
				Effect to be used for switching
			</description>
		</attribute>
		<attribute>
			<name>speed</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<description>
				Transition speed in terms of milliseconds.
			</description>
			<defaultValue>500</defaultValue>
		</attribute>
		<attribute>
			<name>slideshowSpeed</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<description>
				Slideshow speed in terms of milliseconds
			</description>
			<defaultValue>3000</defaultValue>
		</attribute>
		<attribute>
			<name>slideshowAuto</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
			<description>Starts slideshow automatically</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
		<resource>
			<name>core/core.js</name>
		</resource>
		<resource>
			<name>imageswitch/imageswitch.js</name>
		</resource>
	</resources>
</component>