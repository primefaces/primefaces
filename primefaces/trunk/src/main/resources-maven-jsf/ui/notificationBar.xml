<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY output_component_attributes			SYSTEM "../entities/output_component_attributes.xml">
<!ENTITY input_component_attributes				SYSTEM "../entities/input_component_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>notificationBar</tag>
	<tagClass>org.primefaces.component.notificationbar.NotificationBarTag</tagClass>
	<componentClass>org.primefaces.component.notificationbar.NotificationBar</componentClass>
	<componentType>org.primefaces.component.NotificationBar</componentType>
	<componentFamily>org.primefaces.component</componentFamily>
	<rendererType>org.primefaces.component.NotificationBarRenderer</rendererType>
	<rendererClass>org.primefaces.component.notificationbar.NotificationBarRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
	<attributes>
		&standard_uicomponent_attributes;
		&widget_var_attribute;
		<attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>
				 Style of the container element, not the overlay container.
			</description>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>
				 Style class of container element, not the overlay container.
			</description>
		</attribute>
		<attribute>
			<name>position</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>top</defaultValue>
			<description>
				 Position of the bar, "bottom" or "top".
			</description>
		</attribute>
		<attribute>
			<name>effect</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>fade</defaultValue>
			<description>
				 Name of the effect, valid values are "slide", "fade" and "none".
			</description>
		</attribute>
		<attribute>
			<name>effectSpeed</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>normal</defaultValue>
			<description>
				 Speed of the effect. "slow", "normal" or "fast";
			</description>
		</attribute>
		<attribute>
			<name>autoDisplay</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>
				 When set to true, notification bar will be displayed when page is loaded.
			</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>yui/utilities/utilities.js</name>
		</resource>
		<resource>
			<name>notificationbar/notificationbar.css</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
		<resource>
			<name>core/core.js</name>
		</resource>
		<resource>
			<name>notificationbar/notificationbar.js</name>
		</resource>
	</resources>
</component>