<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>resizable</tag>
	<tagClass>org.primefaces.component.resizable.ResizableTag</tagClass>
	<componentClass>org.primefaces.component.resizable.Resizable</componentClass>
    <componentHandlerClass>org.primefaces.component.resizable.ResizableHandler</componentHandlerClass>
	<componentType>org.primefaces.component.Resizable</componentType>
	<componentFamily>org.primefaces.component</componentFamily>
	<rendererType>org.primefaces.component.ResizableRenderer</rendererType>
	<rendererClass>org.primefaces.component.resizable.ResizableRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
     <interfaces>
		<interface>
			<name>org.primefaces.component.api.Widget</name>
		</interface>
	</interfaces>
	<attributes>
		&standard_uicomponent_attributes;
		&widget_var_attribute;
        <attribute>
            <name>for</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Id of the component to add draggable behavior</description>
        </attribute>
        <attribute>
			<name>aspectRatio</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>When enabled, keeps the aspectRatio during resizing.</description>
		</attribute>
		<attribute>
			<name>proxy</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Makes the resizable use a proxy</description>
		</attribute>
		<attribute>
			<name>handles</name>
			<required>false</required>
			<type>java.lang.String</type>
			<description>Handles to use.</description>
		</attribute>
		<attribute>
			<name>ghost</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Displays a ghost effect.</description>
		</attribute>
		<attribute>
			<name>animate</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
			<description>Displays a ghost effect.</description>
		</attribute>
		<attribute>
			<name>effect</name>
			<required>false</required>
			<type>java.lang.String</type>
            <defaultValue>swing</defaultValue>
			<description>Animation effect type.</description>
		</attribute>
		<attribute>
			<name>effectDuration</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>normal</defaultValue>
			<description>Duration of the animation.</description>
		</attribute>
		<attribute>
			<name>maxWidth</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>Integer.MAX_VALUE</defaultValue>
			<description>Maximum width of the resizable</description>
		</attribute>
		<attribute>
			<name>maxHeight</name>
			<required>false</required>
			<defaultValue>Integer.MAX_VALUE</defaultValue>
			<type>java.lang.Integer</type>
			<description>Maximum height of the resizable</description>
		</attribute>
		<attribute>
			<name>minWidth</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>Integer.MIN_VALUE</defaultValue>
			<description>Minimum width of the resizable</description>
		</attribute>
		<attribute>
			<name>minHeight</name>
			<required>false</required>
			<defaultValue>Integer.MIN_VALUE</defaultValue>
			<type>java.lang.Integer</type>
			<description>Minimum height of the resizable</description>
		</attribute>
        <attribute>
			<name>containment</name>
			<required>false</required>
			<defaultValue>false</defaultValue>
			<type>java.lang.Boolean</type>
			<description>When enabled, parent becomes the boundary.</description>
		</attribute>
        <attribute>
			<name>grid</name>
			<required>false</required>
			<defaultValue>1</defaultValue>
			<type>java.lang.Integer</type>
			<description>Defines the offset of pixels to resize.</description>
		</attribute>
         <attribute>
            <name>onResizeUpdate</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Component(s) to update with ajax after target is resized</description>
        </attribute>
        <attribute>
            <name>resizeListener</name>
            <required>false</required>
            <type>javax.el.MethodExpression</type>
            <method-signature>void resizeListener(org.primefaces.event.ResizeEvent)</method-signature>
            <description>A server side listener to process a Resize event</description>
        </attribute>
        <attribute>
            <name>onResize</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Javascript event handler to invoke when resize completes.</description>
        </attribute>
	</attributes>
	<resources>
		<resource>
			<name>jquery/plugins/ui/jquery.ui.resizable.css</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
        <resource>
			<name>jquery/plugins/ui/jquery-ui.custom.js</name>
		</resource>
		<resource>
			<name>core/core.js</name>
		</resource>
        <resource>
			<name>resizable/resizable.js</name>
		</resource>
	</resources>
</component>
