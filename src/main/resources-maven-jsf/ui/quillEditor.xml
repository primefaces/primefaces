<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY output_component_attributes			SYSTEM "../entities/output_component_attributes.xml">
<!ENTITY input_component_attributes				SYSTEM "../entities/input_component_attributes.xml">
<!ENTITY html_input_textarea_attributes			SYSTEM "../entities/html_input_textarea_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
    <tag>quillEditor</tag>
    <tagClass>org.primefaces.component.quillEditor.QuillEditorTag</tagClass>
    <componentClass>org.primefaces.component.quillEditor.QuillEditor</componentClass>
    <componentType>org.primefaces.component.QuillEditor</componentType>
    <componentFamily>org.primefaces.component</componentFamily>
    <rendererType>org.primefaces.component.QuillEditorRenderer</rendererType>
    <rendererClass>org.primefaces.component.quilleditor.QuillEditorRenderer</rendererClass>
    <parent>javax.faces.component.UIInput</parent>
    <description>Editor is an input component with rich text editing capabilities.</description>
    <interfaces>
        <interface>
            <name>org.primefaces.component.api.Widget</name>
        </interface>
    </interfaces>
    <attributes>
		&input_component_attributes;
		&widget_var_attribute;
        <attribute>
            <name>controls</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>List of controls to customize toolbar.</description>
        </attribute>
        <attribute>
            <name>height</name>
            <required>false</required>
            <type>java.lang.Integer</type>
            <defaultValue>java.lang.Integer.MIN_VALUE</defaultValue>
            <description>Height of the editor. Default is min integer value.</description>
        </attribute>
        
        <attribute>
            <name>width</name>
            <required>false</required>
            <type>java.lang.Integer</type>
            <defaultValue>java.lang.Integer.MIN_VALUE</defaultValue>
            <description>Width of the editor. Default is min integer value.</description>
        </attribute>
        
        <attribute>
            <name>disabled</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
        </attribute>
        
        <attribute>
            <name>style</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Inline style of the editor container.</description>
        </attribute>
        
        <attribute>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Style class of the editor container.</description>
        </attribute>
        
        <attribute>
            <name>textColor</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>false</defaultValue>
        </attribute>
        
        <attribute>
            <name>backgroundColor</name>
            <required>false</required>
            <type>java.lang.String</type>
            <defaultValue>false</defaultValue>
        </attribute>
        
        <attribute>
            <name>underline</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
        </attribute>
        
        <attribute>
            <name>bold</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
        </attribute>
        
        <attribute>
            <name>italic</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
        </attribute>
        
        <attribute>
            <name>textSize</name>
            <required>false</required>
            <type>java.lang.Integer</type>
            <defaultValue>12</defaultValue>
        </attribute>
       
    </attributes>
    
    <resources>
        <resource>
            <name>editor/editor.css</name>
        </resource>
        
        <resource>
            <name>editor/jquery-ui.css</name>
        </resource>
        
        <resource>
            <name>editor/quill.snow.css</name>
        </resource>
        
        <resource>
            <name>jquery/jquery.js</name>
        </resource>
        <resource>
            <name>jquery/jquery-plugins.js</name>
        </resource>
        <resource>
            <name>jquery/quill.js</name>
        </resource>
        <resource>
            <name>core.js</name>
        </resource>
        <resource>
            <name>components.js</name>
        </resource>
        <resource>
            <name>editor/editor.js</name>
        </resource>
        
    </resources>
</component>