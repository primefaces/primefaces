        <attribute>
            <name>min</name>
            <required>false</required>
            <type>java.lang.Integer</type>
            <defaultValue>0</defaultValue>
            <description>min valid value of the component.</description>
        </attribute>
        <attribute>
            <name>max</name>
            <required>false</required>
            <type>java.lang.Integer</type>
